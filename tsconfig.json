{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",      
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "allowJs": true,         
    "checkJs": true,         
    "noEmit": true,          

    /* Strict Type-Checking Options */
    "strict": false,
    "noImplicitAny": false, // FIXME: enable this as soon as possible
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": false,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "types",
    "typeRoots": ["types"],

    "esModuleInterop": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "node_modules/@types/openlayers/*",
    "types/**/*"
  ]
}
